{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    // "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "ts-node": {
      "compilerOptions": {
          "module": "CommonJS"
      }
  }
}